<h1>Listing Hardware Categories</h1>

<div class="panel-heading">Items</div>
<div class="panel-body">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @hardware_categories.each do |hardware_category| %>
            <tr>
                <td><%= hardware_category.name %></td>
                <td><%= link_to 'Show', hardware_category %></td>
                <td><%= link_to 'Edit', edit_hardware_category_path(hardware_category) %></td>
                <td><%= link_to 'Destroy', hardware_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br>

<%= link_to 'New Hardware category', new_hardware_category_path %>
