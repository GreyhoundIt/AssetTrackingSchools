<h1>Editing software</h1>

<%= form_for(@software) do |f| %>
<% if @software.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@software.errors.count, "error") %>
        prohibited this software from being saved:</h2>

    <ul>
        <% @software.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</div>
<div class="field">
    <%= f.label :asset_tag %><br>
    <%= f.text_field :asset_tag %>
</div>
<div class="field">
    <%= f.label :supplier_id %><br>
    <%= f.select :supplier_id, @suppliers %>
</div>
<div class="field">
    <%= f.label :invoice %><br>
    <%= f.text_field :invoice %>
</div>
<div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
</div>
<div class="field">
    <%= f.label :purchase_date %><br>
    <%= f.date_select :purchase_date %>
</div>
<div class="field">
    <%= f.label :renewal_date %><br>
    <%= f.date_select :renewal_date %>
</div>
<div class="field">
    <%= f.label :licence_key %><br>
    <%= f.text_field :licence_key %>
</div>
<div class="field">
    <%= f.label :number_of_licences %><br>
    <%= f.number_field :number_of_licences %>
</div>
<div class="field">
    <%= f.label :licence_type %><br>
    <%= f.text_field :licence_type %>
</div>
<div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</div>
<div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
<% end %>

<%= link_to 'Show', @software %>
